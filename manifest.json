{
  "manifest_version": 2,
  "name": "Marquiz Support Helper",
  "version": "1.0",
  "description": "Набор функций ускоряющих работу поддержки сервиса Marquiz",
  "icons": {
    "16": "/icon.png",
    "32": "/icon.png",
    "48": "/icon.png",
    "128": "/icon.png"
  },
  "content_scripts": [
      {
          "matches": [ "<all_urls>" ],
          "js": [ "jquery-3.6.0.min.js","app.js" ]
      }
  ],
  "background": {
    "scripts":["background.js"]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "Marquiz Support Helper",
    "default_icon": {
      "16": "/icon.png",
      "32": "/icon.png",
      "48": "/icon.png",
      "128": "/icon.png"
    },
    "default_popup": "popup.html"
  }

}